# ============================================
# DATABASE
# ============================================

# Pooler (porta 6543) - para runtime do app
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection (porta 5432) - para migrations
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"


# ============================================
# NEXTAUTH
# ============================================

# URL base da aplicação
NEXTAUTH_URL="http://localhost:3000"  # Em produção: https://seudominio.com

# Secret para criptografia (GERAR NOVO!)
# Gere em: https://generate-secret.vercel.app/32
NEXTAUTH_SECRET="your-nextauth-secret-here-CHANGE-THIS"


# ============================================
# SUPABASE
# ============================================

# URL do projeto (público - ok expor no cliente)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT_REF].supabase.co"

# Anon key (público - ok expor no cliente)
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ⚠️ SERVICE ROLE KEY (PRIVADO - NUNCA EXPOR NO CLIENTE!)
# Obtenha em: Dashboard > Settings > API > service_role key
# Esta chave bypassa RLS e tem permissões TOTAIS!
SUPABASE_SERVICE_ROLE_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."


# ============================================
# EMAIL (OPCIONAL)
# ============================================

# Resend API Key (se usar Resend para emails)
RESEND_API_KEY="re_..."


# ============================================
# UPSTASH REDIS (OPCIONAL - PARA RATE LIMITING EM PRODUÇÃO)
# ============================================

# Se usar Upstash para rate limiting distribuído
# UPSTASH_REDIS_REST_URL="https://..."
# UPSTASH_REDIS_REST_TOKEN="..."


# ============================================
# OUTRAS CONFIGURAÇÕES
# ============================================

# Ambiente (development | production | test)
NODE_ENV="development"