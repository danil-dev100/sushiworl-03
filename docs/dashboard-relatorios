<script>
    const chartOptions = (isDarkMode) => ({
        plugins: {
            legend: {
                labels: {
                    color: isDarkMode ? '#f5f1e9' : '#333333',
                    font: { family: 'Plus Jakarta Sans' }
                }
            },
            tooltip: {
                backgroundColor: isDarkMode ? '#2a1e14' : '#ffffff',
                titleColor: isDarkMode ? '#f5f1e9' : '#333333',
                bodyColor: isDarkMode ? '#f5f1e9' : '#333333',
                borderColor: isDarkMode ? '#4a3c30' : '#ead9cd',
                borderWidth: 1,
                titleFont: { family: 'Plus Jakarta Sans' },
                bodyFont: { family: 'Plus Jakarta Sans' },
                callbacks: {
                     label: function(context) {
                        let label = context.dataset.label || '';
                        if (label) {
                            label += ': ';
                        }
                        if (context.parsed.y !== null && context.dataset.label.includes('(€)')) {
                           label += new Intl.NumberFormat('de-DE', { style: 'currency', currency: 'EUR' }).format(context.parsed.y);
                        } else {
                           label += context.formattedValue;
                        }
                        return label;
                    }
                }
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: { color: isDarkMode ? 'rgba(234, 217, 205, 0.1)' : 'rgba(51, 51, 51, 0.1)' },
                ticks: { 
                  color: isDarkMode ? '#a16b45' : '#a16b45',
                  callback: function(value, index, values) {
                    return '€' + value;
                  }
                }
            },
            x: {
                grid: { display: false },
                ticks: { color: isDarkMode ? '#a16b45' : '#a16b45' }
            }
        }
    });
    const isDarkMode = document.documentElement.classList.contains('dark');
    const primaryColor = '#FF6B00';
    const chartColors = ['#FF6B00', '#FF8C3A', '#FFAD73', '#FFD4B5', '#FFE9D9'];
    // Sales by Category Chart
    new Chart(document.getElementById('salesByCategoryChart'), {
        type: 'bar',
        data: {
            labels: ['Sushis', 'Temakis', 'Bebidas', 'Sobremesas', 'Combos'],
            datasets: [{
                label: 'Vendas (€)',
                data: [5200, 3100, 1800, 950, 4500],
                backgroundColor: primaryColor,
                borderColor: primaryColor,
                borderWidth: 1,
                borderRadius: 4
            }]
        },
        options: chartOptions(isDarkMode)
    });
    // Traffic Source Chart
    new Chart(document.getElementById('trafficSourceChart'), {
        type: 'pie',
        data: {
            labels: ['Direto', 'Redes Sociais', 'Google', 'Parceiros'],
            datasets: [{
                label: 'Sessões',
                data: [35, 25, 22, 18],
                backgroundColor: chartColors,
                borderColor: isDarkMode ? '#2a1e14' : '#ffffff',
                borderWidth: 2
            }]
        },
        options: {
            plugins: {
                legend: { position: 'right', ...chartOptions(isDarkMode).plugins.legend },
                tooltip: { ...chartOptions(isDarkMode).plugins.tooltip, callbacks: { label: (c) => `${c.label}: ${c.raw}%` } }
            }
        }
    });
    // Orders Evolution Chart
    new Chart(document.getElementById('ordersEvolutionChart'), {
        type: 'line',
        data: {
            labels: ['Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb', 'Dom'],
            datasets: [{
                label: 'Pedidos',
                data: [25, 30, 45, 40, 60, 85, 95],
                borderColor: primaryColor,
                backgroundColor: 'rgba(255, 107, 0, 0.1)',
                tension: 0.3,
                fill: true,
                pointBackgroundColor: primaryColor,
                pointBorderColor: primaryColor
            }]
        },
        options: { 
            ...chartOptions(isDarkMode), 
            responsive: true, 
            maintainAspectRatio: false,
            scales: {
              y: { ...chartOptions(isDarkMode).scales.y, ticks: { color: isDarkMode ? '#a16b45' : '#a16b45' }},
              x: { ...chartOptions(isDarkMode).scales.x }
            }
        }
    });
</script>

