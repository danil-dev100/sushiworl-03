cat > prisma/schema.prisma << 'EOF'
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  phone     String?
  role      Role     @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Product {
  id          String   @id @default(cuid())
  sku         String   @unique
  name        String
  description String?
  price       Float
  discountPrice Float?
  category    String
  imageUrl    String
  status      String   @default(AVAILABLE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id              String    @id @default(cuid())
  userId           String?   @relation(fields: [userId], references: [User.id])
  customerName     String
  customerEmail   String
  customerPhone   String
  deliveryAddress Json // Para armazenar endereço completo
  total            Float
  status           OrderStatus @default(PENDING)
  paymentMethod    PaymentMethod @default(CREDIT_CARD)
  changeFor        Float?
  couponCode       String?
  observations      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User?     @relation(fields: [userId], references: [User.id])
  orderItems       OrderItem[]
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId  String
  quantity    Int
  priceAtTime Float
  order       Order    @relation(fields: [orderId], references: [Order.id])
  product     Product   @relation(fields: [productId], references: [Product.id])
}

model Settings {
  id              String   @id @default(cuid())
  companyName      String
  billingName     String?
  nif             String
  address         String?
  phone           String?
  openingHours     Json?   // Para armazenar horários de forma flexível
  vatRate         Float
  vatType         VatType
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Role {
  ADMIN
  MANAGER
  CUSTOMER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
  DELIVERING
  DELIVERED
}

enum PaymentMethod {
  CREDIT_CARD
  CASH
}

enum VatType {
  INCLUSIVE
  EXCLUSIVE
}
EOF